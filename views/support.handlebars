<main id="main">
    <section id="blog" class="blog" style="background-color:white">
        <div class="container">
            <div class="section-title">
                <h2>Hỗ trợ người dùng</h2>
            </div>
            <div class="row">
                <div class="button-question">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo">+ Thêm câu hỏi</button>
                    </div>
                
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Câu hỏi</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form method="POST" action="/takeQuestion">
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Họ Tên:</label>
            <input type="text" name="hoTen" class="form-control" id="recipient-name">
          </div>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Số Điện Thoại:</label>
            <input type="text" name="soDienThoai" class="form-control" id="recipient-name">
          </div>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Chủ Đề:</label>
            <input type="text" name="chuDe" class="form-control" id="recipient-name">
          </div>
          <div class="mb-3">
            <label for="message-text" class="col-form-label">Nội Dung:</label>
            <textarea class="form-control" name="noiDung" id="message-text"></textarea>
          </div>
           <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
        <button type="submit" class="btn btn-primary">Gửi câu hỏi</button>
      </div>
        </form>
      </div>
    </div>
  </div>
</div>
                <div class="col-lg-8 entries">
                  {{#each question}}
                    {{#each this}}
                              <article class="entry" data-aos="fade-up">

                                <div class="entry-img">
                                    <img src="" alt="" class="img-fluid">
                                </div>

                                <h2 class="entry-title">
                                    <a href="supportDetail">{{chuDe}}</a>
                                </h2>

                                <div class="entry-meta">
                                    <ul>
                                        <li class="d-flex align-items-center"><i class="icofont-user"></i> <a href="supportDetail">{{hoTen}}</a></li>
                                        <li class="d-flex align-items-center"><i class="icofont-wall-clock"></i> <a href="supportDetail"><time datetime="2020-01-01">{{datetime}}</time></a></li>
                                    </ul>
                                </div>

                                <div class="entry-content">
                                    <p>
                                        {{noiDung}}
                                    </p>
                                    <div class="read-more">
                                        <a href="supportDetail">Read More</a>
                                    </div>
                                </div>

                            </article>
                            {{/each}}
                            {{/each}}
                            <!-- End blog entry -->
                    {{!-- <PaginationPage TotalPageQuantity="TotalPageQuantity" CurrentPage="CurrentPage" Radius="2" SelectedPage="SelectedPage"></PaginationPage> --}}

                </div><!-- End blog entries list -->
            </div>
        </div>
    </section>
</main>