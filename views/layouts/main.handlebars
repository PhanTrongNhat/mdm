    <script>
    
      function chooseTinh() {
  let tinhId = document.getElementById("inputTinh").value;
  const xhr = new XMLHttpRequest();
  xhr.open("GET", `//localhost:3000/getHuyenByIdTinh?id=${tinhId}`, true);
  xhr.onload = function () {
    if (this.status === 200) {
      let obj = JSON.parse(this.responseText);
      let list = document.getElementById("inputHuyen");
      str = "";
      for (key in obj) {
        str += `<option value=${obj[key]._id}>${obj[key].tenHuyen}</li>`;
      }
      list.innerHTML = str;
    } else {
      console.log("File not found");
    }
  };
  xhr.send();
}
